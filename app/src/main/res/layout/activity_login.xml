<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baguio_breathe_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        tools:context=".LoginActivity">

        <!-- Floating Clouds Effect -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp">

            <!-- Subtle cloud shapes -->
            <View
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cloud_shape"
                android:alpha="0.1" />

            <View
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cloud_shape"
                android:alpha="0.08" />

            <View
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/cloud_shape"
                android:alpha="0.12" />

        </FrameLayout>

        <!-- CrowdShift Logo with pins -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:background="@drawable/logo_container_background"
            android:padding="24dp"
            android:elevation="4dp">

            <!-- Pin icons row with floating animation -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Hotel Pin -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/pin_background_red_breathe"
                    android:gravity="center"
                    android:text="ðŸ¨"
                    android:textSize="18sp"
                    android:elevation="2dp" />

                <!-- Location Pin -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/pin_background_green_breathe"
                    android:gravity="center"
                    android:text="ðŸ“"
                    android:textSize="18sp"
                    android:elevation="2dp" />

                <!-- Parking Pin -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/pin_background_blue_breathe"
                    android:gravity="center"
                    android:text="ðŸ…¿ï¸"
                    android:textSize="16sp"
                    android:elevation="2dp" />

                <!-- Transport Pin -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/pin_background_purple_breathe"
                    android:gravity="center"
                    android:text="ðŸšŒ"
                    android:textSize="16sp"
                    android:elevation="2dp" />

                <!-- Restaurant Pin -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/pin_background_pink_breathe"
                    android:gravity="center"
                    android:text="ðŸ´"
                    android:textSize="16sp"
                    android:elevation="2dp" />

            </LinearLayout>

            <!-- CrowdShift Logo Text with mountain feeling -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CROWDSHIFT"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp"
                android:shadowColor="#80FFFFFF"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Tagline with fresh mountain air feeling -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less Congestions, More Connections"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:gravity="center"
                android:textStyle="italic"
                android:alpha="0.9" />

            <!-- Breathe Baguio subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breathe Baguio"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.8"
                android:letterSpacing="0.2" />

        </LinearLayout>

        <!-- Login Form with glass morphism effect -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/glass_morphism_background"
            android:padding="24dp"
            android:elevation="6dp">

            <!-- Beep Card ID Input with fresh mountain style -->
            <EditText
                android:id="@+id/beepIdInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/input_baguio_style"
                android:hint="Enter Beep Card ID"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:paddingVertical="18dp"
                android:textColor="#1B5E20"
                android:textColorHint="#81C784"
                android:textSize="16sp"
                android:elevation="2dp" />

            <!-- OR Divider with mountain mist style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_line_baguio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="Or"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:background="@drawable/or_text_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_line_baguio" />

            </LinearLayout>

            <!-- QR Scanner Button with fresh mountain breeze style -->
            <Button
                android:id="@+id/qrButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/button_qr_baguio_style"
                android:text="Scan QR Card"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:drawableLeft="@drawable/ic_qr_code"
                android:drawablePadding="12dp"
                android:gravity="center" />

            <!-- Breathe In Button with mountain air essence -->
            <Button
                android:id="@+id/breatheInButton"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/button_breathe_baguio"
                android:text="Breathe in"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="8dp"
                android:shadowColor="#4CAF50"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="8" />

        </LinearLayout>

        <!-- Bottom mountain silhouette -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/mountain_silhouette"
            android:alpha="0.1" />

    </LinearLayout>

</ScrollView>