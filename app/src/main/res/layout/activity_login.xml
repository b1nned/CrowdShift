<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baguio_breathe_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        tools:context=".LoginActivity">

        <!-- Floating Clouds Effect -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp">

            <!-- Subtle cloud shapes -->
            <View
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cloud_shape"
                android:alpha="0.1" />

            <View
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cloud_shape"
                android:alpha="0.08" />

            <View
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/cloud_shape"
                android:alpha="0.12" />

        </FrameLayout>

        <!-- CrowdShift Logo Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main logo only -->
            <ImageView
                android:id="@+id/mainLogo"
                android:layout_width="380dp"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="CrowdShift Logo"
                android:scaleType="centerInside"
                android:src="@drawable/lo" />

            <!-- App title and tagline -->


        </LinearLayout>

        <!-- Login Form Container -->

        <!-- Spacer for bottom -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/glass_morphism_background"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Beep Card ID Input -->
            <EditText
                android:id="@+id/beepIdInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/input_baguio_style"
                android:hint="Enter Beep Card ID"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:textColor="#1B5E20"
                android:textColorHint="#81C784"
                android:textSize="16sp" />

            <!-- OR Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Or"
                    android:textColor="#4CAF50"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

            </LinearLayout>

            <!-- QR Scanner Button -->
            <Button
                android:id="@+id/qrButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/button_qr_baguio_style"
                android:drawableStart="@drawable/ic_qr_code"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="Scan QR Card"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Breathe In Button -->
            <Button
                android:id="@+id/breatheInButton"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/button_breathe_baguio"
                android:text="Breathe In"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Bottom mountain silhouette -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/mountain_silhouette"
            android:alpha="0.15" />

    </LinearLayout>

</ScrollView>